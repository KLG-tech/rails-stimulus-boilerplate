<%= render layout: 'layouts/wrapper' do %>
  <div class="rounded-lg bg-white p-8 shadow">
    <h1 class="text-2xl font-bold mb-4">Team Calendar</h1>
    <p class="text-gray-700 mb-4">Here is the team's schedule and upcoming events.</p>

    <div class="grid grid-cols-7 gap-2 text-center text-sm font-medium text-gray-700 mb-2">
      <% %w[Sun Mon Tue Wed Thu Fri Sat].each do |day| %>
        <div class="py-2 border-b border-gray-200"><%= day %></div>
      <% end %>
    </div>

    <div class="grid grid-cols-7 gap-2 text-center text-sm">
      <% 1.upto(30) do |day| %>
        <div class="py-2 border rounded bg-gray-50 hover:bg-indigo-50 hover:text-indigo-600">
          <%= day %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
